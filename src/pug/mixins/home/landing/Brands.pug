
mixin Brand(image)
  .col-sm-6.col-lg&attributes(attributes)
    img(src=`${CWD}assets/img/gallery/${image}` height='38' alt='brands')
mixin Brands
  +Section.py-6.bg-soft-warning
    .row
      +Brand('netflix.png').mb-4.mb-lg-0.d-flex.flex-center          
      +Brand('facebook.png').mb-4.mb-lg-0.d-flex.flex-center            
      +Brand('freelancer.png').mb-4.mb-lg-0.d-flex.flex-center                              
      +Brand('mailbluster.png').mb-4.mb-lg-0.d-flex.flex-center             
      +Brand('theme-wagon.png').mb-4.mb-lg-0.d-flex.flex-center            